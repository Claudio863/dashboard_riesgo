# Ejemplo de configuración de secrets para Streamlit Cloud
# Copia este archivo a tu configuración de secrets en Streamlit Cloud

# Método 1: Usando Service Account (RECOMENDADO para producción)
[google_service_account]
type = "service_account"
project_id = "tu-project-id"
private_key_id = "tu-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\ntu-private-key\n-----END PRIVATE KEY-----\n"
client_email = "tu-service-account@tu-project.iam.gserviceaccount.com"
client_id = "tu-client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "tu-cert-url"

# Método 2: Usando OAuth2 (alternativo)
[google_credentials]
client_id = "tu-client-id.apps.googleusercontent.com"
client_secret = "tu-client-secret"
redirect_uris = ["http://localhost:8080/"]
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"

[google_token]
access_token = "tu-access-token"
refresh_token = "tu-refresh-token"
token_uri = "https://oauth2.googleapis.com/token"
client_id = "tu-client-id.apps.googleusercontent.com"
client_secret = "tu-client-secret"
